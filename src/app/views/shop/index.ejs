<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
          <div class="container col-12 ">
            <div class="row mx-2">
              <% for (let product of prods) { %>
                <div class="card col-6 col-md-4 col-lg-4 col-xl-2 my-4">
                  <img class="card-img-top" src="/<%= product.imageUrl %>" alt="<%= product.title %>">
                  <div class="card-body">
                    <h5 class="card-title"><%= product.title %></h5>
                    <p class="card-text"><%= product.description %></p>
                  </div>
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item">Price: <strong>$<%= product.price %></strong></li>
                  </ul>
                  <div class="card-body text-center">
                    <a href="/products/<%= product._id %>" class="btn btn-info">Details</a>
                    <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                  </div>
                </div>
              <% } %>
            </div>
          </div>

          <!-- ------------- PAGINACAO ------------- -->
          <%- include('../includes/pagination.ejs') %>
          <!-- ------------- ----------- ------------- -->
        <% } else { %>
          <h1 class="text-warning text-center">No Products Found!</h1>
        <% } %>
    </main>
    
<%- include('../includes/end.ejs') %>